<p id="notice"><%= notice %></p>
<div class=container>
<h1>Cities</h1>

<table class=" table table-hover">
<div class="table-responsive">
  <thead>
    <tr>
      <th>City name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.city_name %></td>
        <td><%= link_to 'Show', show_page_city_path(city), :class=>"btn btn-success", :remote => true, 'data-toggle' =>"modal",'data-target' =>'#myModal' %></td>

        <td><%= link_to 'Edit', edit_city_city_path(city), :class=>"btn btn-info", :remote => true, 'data-toggle' =>"modal",'data-target' =>'#myModal1' %></td>
        
        <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } ,:class=>"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
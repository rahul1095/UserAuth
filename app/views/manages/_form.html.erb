<div class ="container">
<%if @manage.id.present?%>
  <% path = "/manages/#{@manage.id}"%>
<% else %>
  <% path = manages_path%>
<% end %>

<%= form_for(@manage, url: path,:remote=>true) do |f| %>
  <% if manage.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(manage.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% manage.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


        <div class="form-group">
        <label class="col-sm-2 control-label">First name</label>
        <div class="col-sm-2  inputGroupContainer">
          <%= f.text_field :first_name,:class=>"form-control" %>
          </div>
        </div>

        <div class="form-group">
        <label class="col-sm-2 control-label">Last name</label>
        <div class="col-sm-3  inputGroupContainer">
          <%= f.text_field :last_name,:class=>"form-control" %>
        
          </div>
        </div>
        
        <div class="form-group">
        <label class="col-sm-1 control-label">email</label>
        <div class="col-sm-2  inputGroupContainer">
          <%= f.email_field :email,:class=>"form-control" %>
        
          </div>
        </div></br></br></br>
        

 <div class="form-group">
        <label class="col-sm-2 control-label">company</label>
        <div class="col-sm-7  inputGroupContainer">
         <%= f.select(:company_id, Company.all.collect {|u| [u.name, u.id]},{},:prompt => 'Select Company',:class=>"form-control") %>
        
          </div>
        </div>

            <div class="form-group">
        <label class="col-sm-1 control-label">monthly</label>
        <div class="col-sm-2  inputGroupContainer">
          <%= f.text_field :monthly_charge,:class=>"form-control" %>
        
          </div>
        </div></br></br>


        <div class="form-group">
        <label class="col-sm-2 control-label">Role</label>
        <div class="col-sm-7  inputGroupContainer">
         <%= f.select(:role_id, UserRole.all.collect {|u| [u.role_name, u.id]},{},:prompt => 'Select userRole',:class=>"form-control") %>
         </div>
          
           </div></br></br>

           <div class="form-group">
    <label class="col-sm-2 control-label">Start_date</label>
    <div class="col-sm-2  inputGroupContainer">
     <%= f.text_field :start_date, :id => 'datetimepicker1' %>
    </div>
  </div>

  <div class="form-group">
        <label class="col-sm-1 control-label">End_date</label>
      <div class="col-sm-2  inputGroupContainer">
          <%= f.text_field :end_date, :id => 'datetimepicker2' %>

        </div>
    </div>

 <div class="form-group">
        <label class="col-sm-1 control-label">Active</label>
      <div class="col-sm-1  inputGroupContainer">
          <%= f.check_box :active %>
        </div>
    </div></br></br>

  
    
       <div class="form-group">
        <label class="col-sm-5 control-label">image</label>
        <div class="col-sm-7  inputGroupContainer">
          <%= f.file_field :image_id,:onchange => "showimagepreview(this)",:class=>"img_file"  %>
              <img id="imgprvw" style="width: 167px; height: 94px; margin-top: 8px;" />
            <%#= f.select(:image_id, Image.all.collect {|u| [u. real_name, u.id]},:prompt => 'Select Category',:class=>"form-control") %> 
          </div>
          </div></br></br>
          


           <div class="form-group">
        <label class="col-sm-2 control-label">Notes</label>
        <div class="col-sm-10  inputGroupContainer">
          <%= f.cktext_area :notes,:class=>"form-control" %>
         </div>
        </div>
        

        <div class="actions">
    <%= f.submit %>
  </div>

        

  <% end %>

  <script>
  function showimagepreview(input) {
    if (input.files && input.files[0]) {
    var filerdr = new FileReader();
    filerdr.onload = function(e) {

    $('#imgprvw').attr('src', e.target.result);
    }
    filerdr.readAsDataURL(input.files[0]);
    }
    $('.image_upload').submit();
  }
</script>

<script type="text/javascript">

            $(function () {
                $('#datetimepicker1').datetimepicker();
                $('#datetimepicker2').datetimepicker();
            });
        </script>

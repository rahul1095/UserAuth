<p id="notice"><%= notice %></p>

<h1>User Regions</h1>
<div class="user_regions-cantainer">
<table class=" table table-hover">
  <thead>
    <tr>
      <th>user name</th>
       <th>region name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_regions.each do |user_region| %>
      <tr>

        <td><%if user_region.region_id.present? %>
       <%= Region.find(user_region.region_id).region_name %>
       <%end%></td>

       <td><%if user_region.user_id.present? %>
      <%=User.find(user_region.user_id).first_name %>
       <%end%></td>
 
        <td><%= link_to 'Show', show_page_user_region_path(user_region), :class=>"btn btn-success", :remote => true, 'data-toggle' =>"modal",'data-target' =>'#myModal' %></td>
       <td><%= link_to 'Edit',edit_user_region_user_region_path(user_region), :class=>"btn btn-info", :remote => true, 'data-toggle' =>"modal",'data-target' =>'#myModal1' %></td>

        <td><%= link_to 'Destroy', user_region, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



<p id="notice"><%= notice %></p>

<h1>States</h1>
<div class="state-container">
<table class="table table-hover">
  <thead>
    <tr>
       <th>country name</th>
      <th>State name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
      <td><%if state.country_id.present? %>
      <%= Country.find(state.country_id).country_name %>
        <%end%>
      </td>
        <td><%= state.state_name %></td>
        
       <td><%= link_to 'Show', show_page_state_path(state), :class=>"btn btn-success", :remote => true, 'data-toggle' =>"modal",'data-target' =>'#myModal' %></td>
       <td><%= link_to 'Edit',edit_state_state_path(state), :class=>"btn btn-info", :remote => true, 'data-toggle' =>"modal",'data-target' =>'#myModal1' %></td>
        <td><%= link_to 'Destroy', state, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New State', new_state_path,:class=>"btn btn-default"%>
</div>
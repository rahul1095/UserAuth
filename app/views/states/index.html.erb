<div class="containner">
<p id="notice"><%= notice %></p>

<h1>States</h1>

<table class="table table-hover">
  <thead>
    <tr>
       <th>country name</th>
      <th>State name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
      <td><%= Country.find(state.country_id).country_name %></td>
        <td><%= state.state_name %></td>
        <td><%= link_to 'Show', state,:class=>"btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_state_path(state),:class=>"btn btn-info" %></td>
        <td><%= link_to 'Destroy', state, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

